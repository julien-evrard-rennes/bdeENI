            {% endif %}
        {% endif %}
        <li><a href="{{ path ('accueil') }}">Accueil</a></li>
        {% if app.user %}
            <li><a href="{{ path('profil') }}">Mon Profil</a></li>
            <li><a href="{{ path('app_logout') }}">Se d√©connecter</a></li>
        {% else %}
            <li><a href="{{ path('connex') }}">Se connecter</a></li>
