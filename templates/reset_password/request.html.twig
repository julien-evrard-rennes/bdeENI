{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" roles="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.mail) }}
        <div>
            <small>
               <p> Entrez votre adresse mail pour recevoir un email avec un lien pour réinitialiser votre mot de passe.</p>
                <p> Si vous ne recevez pas d'email, veuillez vérifier votre dossier de spam ou réessayez.</p>
            </small>
        </div>

        <button class="btn btn-primary">Envoyez votre mail de recouvrement</button>
    {{ form_end(requestForm) }}
{% endblock %}
