{% extends 'base' %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
    <table>
        <tr>
            <th>Villes</th>
            <th>Code Postal</th>
        </tr>
        {% for ville in villeListe %}
            <tr>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
            </tr>
        {% else %}
            <td scope="row" colspan="2">Il n'y a aucune ville connue</td>
        {% endfor %}

    </table>
    <h2>Création Ville</h2>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button>Créer</button>
    {{ form_end(form) }}
    {% else %}
        <h1>Accès refusé</h1>
        <p>Vous n'avez pas les droits nécessaires pour accéder à cette page.</p>
        <a class="bouton" href="{{ path('accueil') }}">Revenir à l'accueil</a>

{% endif %}
{% endblock %}
